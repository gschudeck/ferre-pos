# Variables de entorno sensibles
SMTP_CLIENT_ENV=development

# Gmail OAuth2
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Office 365 OAuth2
OFFICE365_CLIENT_ID=your-office365-client-id
OFFICE365_CLIENT_SECRET=your-office365-client-secret
OFFICE365_TENANT_ID=your-tenant-id

# Seguridad
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET=your-jwt-secret

# Base de datos (si se usa para almacenar tokens)
DATABASE_URL=postgres://user:password@localhost/smtp_client?sslmode=disable
REDIS_URL=redis://localhost:6379/0

# Configuraci√≥n de correo para notificaciones de errores
ADMIN_EMAIL=admin@empresa.com
ERROR_NOTIFICATION_ENABLED=true
